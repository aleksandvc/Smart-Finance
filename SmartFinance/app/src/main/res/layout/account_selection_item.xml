<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/all_view_spacing_small">

    <ImageView
        android:id="@+id/account_selection_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/all_view_spacing_huge"
        android:layout_marginRight="@dimen/all_text_size_tiny"
        android:adjustViewBounds="true"
        android:src="@mipmap/cocktail" />

    <TextView
        android:id="@+id/account_selection_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text="@string/test_text"
        android:textSize="@dimen/all_text_size_large" />

    <CheckBox
        android:clickable="false"
        android:id="@+id/account_selection_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>