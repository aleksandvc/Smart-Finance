<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDark"
    tools:context="com.vladimircvetanov.smartfinance.LoginActivity">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/smartfinance_icon" />

    <ImageView
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:src="@drawable/registration"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/register_email_insert"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:hint="@string/email_hint"
            android:maxLength="40"
            android:inputType="textWebEmailAddress"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/all_text_size_standard"

            android:layout_marginLeft="10dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/mylock"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/register_pass_insert"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_marginTop="6dp"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/all_text_size_standard"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@mipmap/mylock"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/register_confirm_insert"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_hint"
            android:maxLength="20"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/all_text_size_standard"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/register_reg_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="@string/register_btn"
            android:background="@drawable/balance_button"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/register_cancel_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel_btn"
            android:layout_marginTop="10dp"
            android:background="@drawable/balance_button"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
</LinearLayout>
