<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorDark"
    tools:context="com.vladimircvetanov.smartfinance.LoginActivity"
    >

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:src="@drawable/smartfinance_icon" />
    <ImageView
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:src="@drawable/registration"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/register_email_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="e-mail                            "
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="25sp"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.55" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/whitelocked"
            android:layout_gravity="center"
            android:background="@color/colorWhite"/>
        <EditText
            android:id="@+id/register_pass_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="password        "
            android:textColor="@color/colorWhite"
            android:inputType="textPassword"
            android:textColorHint="@color/colorWhite"
            android:textSize="25sp"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/whitelocked"
            android:layout_gravity="center"
            android:background="@color/colorWhite"/>
        <EditText
            android:id="@+id/register_confirm_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="confirm password"
            android:inputType="textPassword"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textSize="25sp"
            android:maxLength="20"
            android:maxLines="1"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/register_reg_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/shadow"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/register_cancel_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginTop="10dp"
            android:background="@drawable/shadow"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

</LinearLayout>
