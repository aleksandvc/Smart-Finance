<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vladimircvetanov.smartfinance.AccountsFragment">

    <TextView
        android:id="@+id/my_accounts_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="@dimen/all_text_size_middle"
        android:text="@string/my_accounts_title"
        android:background="@color/colorLightGreen"
        android:textColor="@color/colorDarkGreen"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/accounts_list"
        android:layout_below="@id/my_accounts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/more_accounts_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:textSize="@dimen/all_text_size_middle"
        android:layout_below="@+id/accounts_list"
        android:text="@string/add_more_accounts_title"
        android:background="@color/colorLightGreen"
        android:textColor="@color/colorDarkGreen"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/accounts_icons_list"
        android:layout_below="@id/more_accounts_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
