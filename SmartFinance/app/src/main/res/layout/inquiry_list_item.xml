<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/all_view_spacing_small"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/inquiry_item_icon"
        android:src="@drawable/radio_income_true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"/>

    <TextView
        android:id="@+id/inquiry_item_sum"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:textSize="@dimen/all_text_size_large"
        android:layout_height="match_parent"
        android:text="@string/test_text"/>

    <TextView
        android:id="@+id/inquiry_item_date"
        android:textSize="@dimen/all_text_size_large"
        android:gravity="center_vertical"
        android:text="01/02/17"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</LinearLayout>