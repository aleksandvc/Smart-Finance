<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar_old"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGreen"
    app:popupTheme="@style/ThemeOverlay.CustomTheme"
    app:theme="@style/OverflowMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/logo_side"
            android:layout_height="@dimen/logo_side"
            android:src="@drawable/smartfinance_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/toolbar_title"
            android:text="@string/app_name"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:paddingLeft="@dimen/all_view_spacing_small"
            android:textSize="@dimen/all_text_size_middle"/>

    </LinearLayout>
</android.support.v7.widget.Toolbar>